#!/usr/bin/env bash

source common

DESC="scan(files7) with hard links"

(cd ./files7 && ./create_files)

$DUPD_CMD scan --path `pwd`/files7 -q $DUPD_CACHEOPT
checkrv $?

DESC="dups with hard links"
$DUPD_CMD dups -v --path `pwd`/files7/ --cut `pwd`/files7/ $DUPD_CACHEOPT | grep -v "Duplicate report from database" > nreport
checkrv $?
check_nreport output.61a

DESC="dups with hard links -I (hardlink-is-unique)"
$DUPD_CMD dups -v -I --path `pwd`/files7/ --cut `pwd`/files7/ $DUPD_CACHEOPT | grep -v "Duplicate report from database" > nreport
checkrv $?
check_nreport output.61b

rm -f files7/?

tdone
